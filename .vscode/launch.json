    "version": "0.2.0",
    "configurations": [
        {
            "type": "expo",
            "request": "attach",
            "name": "Debug Expo app",
            "projectRoot": "${workspaceFolder}",
            "bundlerPort": "8081",
            "bundlerHost": "172.20.10.2"
        },
        {
            "name": "Run iOS Hermes",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}",
            "enableDebug": false,
            "platform": "ios"
        },
        {
            "name": "Debug Exponent Hermes",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}",
            "platform": "exponent",
            "expoHostType": "local"
        },
        {
            "name": "Debug Exponent Hermes 2",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}",
            "platform": "exponent",
            "expoHostType": "lan"
        }
    ]
}